- is_grid = defined?(grid)

%div{ class: variable.prepend.present? || variable.units.present? || variable.append.present? ? "input-group" : nil }
  - if variable.prepend.present?
    .input-group-prepend
      = render "design_options/show/addon", addon: variable.prepend
  = text_field_tag variable.name, "", class: "form-control", disabled: true
  .input-group-append
    = render "design_options/show/addon", addon: variable.units
    = render "design_options/show/addon", addon: variable.append

- unless is_grid
  %div{ style: "margin-top: 10px; margin-bottom: 20px;" }
    = link_to "Edit Prefix", edit_variable_project_design_design_option_path(@project, @design, design_option, attribute: "prepend", language: params[:language]), remote: true, method: :get, class: "btn btn-sm btn-primary btn-shadow"
    = link_to "Edit Calculation", edit_variable_project_design_design_option_path(@project, @design, design_option, attribute: "calculation", language: params[:language]), remote: true, method: :get, class: "btn btn-sm btn-primary btn-shadow"
    = link_to "Edit Units", edit_variable_project_design_design_option_path(@project, @design, design_option, attribute: "units", language: params[:language]), remote: true, method: :get, class: "btn btn-sm btn-primary btn-shadow"
    = link_to "Edit Suffix", edit_variable_project_design_design_option_path(@project, @design, design_option, attribute: "append", language: params[:language]), remote: true, method: :get, class: "btn btn-sm btn-primary btn-shadow"

  %div= render "variables/calculation_with_links", object: variable
