<% @title = "Project: #{@project.name}" %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Edit Project", edit_project_path(@project), class: 'btn btn-mini' %>
    <%= link_to "Delete Project", @project, confirm: "Are you sure you want to delete Project #{@project.name}?", method: :delete, class: 'btn btn-mini btn-danger' %>
    <%= link_to "View Projects", projects_path, class: 'btn btn-mini' %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>Name</dt>
  <dd><%= @project.name %></dd>

  <dt>Description</dt>
  <dd><%= simple_format @project.description %></dd>

  <dt>Creator</dt>
  <dd><%= link_to @project.user.name, @project.user if @project.user %></dd>
</dl>
