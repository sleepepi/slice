- @title = 'Change your password'

- @no_footer = true

.background-gradient

%p.lead.center
  Change your password

.sign-up-form
  .sign-up-form-title
    Change Password

  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-vertical' }) do |f|
    - if resource.errors.any?
      .callout.callout-danger
        %strong
          The following
          = 'error'.pluralize(resource.errors.count)
          prevented your password from being changed

        %ul
          - resource.errors.full_messages.each do |msg|
            %li= msg

    = f.hidden_field :reset_password_token

    .form-group
      = f.label :password, 'New password', class: 'control-label'
      = f.password_field :password, class: 'form-control'

    .form-group
      = f.label :password_confirmation, 'Confirm new password', class: 'control-label'
      = f.password_field :password_confirmation, class: 'form-control'

    .form-group.sign-up-form-button-container
      = f.submit 'Change my password', class: 'btn btn-primary btn-block btn-shadow-small'

= render 'layouts/simple_footer'
