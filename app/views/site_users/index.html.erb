<% @title = 'Site Users' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Create Site User", new_site_user_path, class: 'btn btn-mini btn-primary' %>
  </h1>
</div>

<%= form_tag site_users_path, method: :get, remote: true, id: "site_users_search", class: 'form-search' do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'search-query' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="site_users"><center><%= image_tag "contour/ajax-loader.gif" %></center></div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#site_users_search").attr("action"), $("#site_users_search").serialize(), null, "script");
  });
<% end %>
