= @comment.user.name
%span{ style: 'padding:5px;background-color:#428bca;color:white' } commented
on
= link_to @comment.sheet.name, "#{ENV['website_url']}/projects/#{@comment.sheet.project.to_param}/sheets/#{@comment.sheet.id}", style: 'color: #428bca'
on
= succeed '.' do
  = link_to @comment.sheet.project.name, "#{ENV['website_url']}/projects/#{@comment.sheet.project.to_param}", style: 'color: #428bca'
%br
%br
- @comment.sheet.comments.order('created_at DESC').limit(5).each do |comment|
  %table{ style: 'width:100%;border:0px;border-collapse:collapse;margin:0px;padding:0px;color:#505050;font-family:Arial;font-size:14px;' }
    %col{ width: '50px' }
    %tr{ style: 'background-color: white;border: 0px;' }
      %td{ style: 'background-color: white;border: 0px;vertical-align:top;' }
        = image_tag 'http:' + comment.user.avatar_url(50, "identicon"), size: '50x50', alt: '', style: 'vertical-align: middle'
      %td{ style: 'border: 0px;vertical-align:top;padding-left:10px;' }
        %div{ style: "border-left: 2px solid #{(@comment and @comment.id == comment.id) ? '#c2daff' : 'white'};padding-left:10px" }
          = comment.user.name
          %span{ style: 'color:#777' }
            = comment.created_at.strftime 'on %b %d, %Y at %I:%M %p'
          %div{ style: 'padding-left:20px;margin-top:-5px;margin-bottom:20px' }
            = simple_format comment.description
%br
= render 'sheet_note', sheet: @comment.sheet
