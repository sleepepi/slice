<div class="page-header">
  <h1><%= link_to @contact.project.name, @contact.project %> &middot; <%= @title %></h1>
</div>

<%= form_for [@contact.project, @contact], html: { class: 'form-horizontal' } do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, nil, class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, nil, class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :phone, nil, class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :phone %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :fax, nil, class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :fax %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, nil, class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :position, nil, class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :position %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :archived, nil, class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.check_box :archived %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
